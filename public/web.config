<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Configuración de reescritura de URL para Laravel en IIS -->
        <rewrite>
            <rules>
                <!-- Excluir Service Worker del rewrite -->
                <rule name="Service Worker" stopProcessing="true">
                    <match url="^sw\.js$" />
                    <action type="None" />
                </rule>
                <!-- Excluir manifest.json del rewrite -->
                <rule name="PWA Manifest" stopProcessing="true">
                    <match url="^manifest\.json$" />
                    <action type="None" />
                </rule>
                <rule name="Imported Rule 1" stopProcessing="true">
                    <match url="^(.*)/$" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Redirect" redirectType="Permanent" url="/{R:1}" />
                </rule>
                <rule name="Imported Rule 2" stopProcessing="true">
                    <match url="^" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" ignoreCase="false" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php" />
                </rule>
            </rules>
        </rewrite>

        <!-- Configuración de seguridad -->
        <security>
            <requestFiltering>
                <!-- Aumentar límite de tamaño de archivos (100MB) -->
                <requestLimits maxAllowedContentLength="104857600" />
            </requestFiltering>
        </security>

        <!-- Headers de seguridad y PWA -->
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                <!-- PWA: Permitir Service Worker en todo el scope -->
                <add name="Service-Worker-Allowed" value="/" />
            </customHeaders>
        </httpProtocol>

        <!-- Configuración de FastCGI para PHP -->
        <handlers>
            <remove name="PHP_via_FastCGI" />
            <add name="PHP_via_FastCGI" path="*.php" verb="*" modules="FastCgiModule" scriptProcessor="C:\php\php-cgi.exe" resourceType="Either" requireAccess="Script" />
        </handlers>

        <!-- MIME Types para PWA y archivos modernos -->
        <staticContent>
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
            
            <!-- Fuentes -->
            <remove fileExtension=".woff2" />
            <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
            <remove fileExtension=".woff" />
            <mimeMap fileExtension=".woff" mimeType="font/woff" />
            <remove fileExtension=".ttf" />
            <mimeMap fileExtension=".ttf" mimeType="font/ttf" />
            <remove fileExtension=".otf" />
            <mimeMap fileExtension=".otf" mimeType="font/otf" />
            <remove fileExtension=".eot" />
            <mimeMap fileExtension=".eot" mimeType="application/vnd.ms-fontobject" />
            
            <!-- PWA Manifest -->
            <remove fileExtension=".json" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <remove fileExtension=".webmanifest" />
            <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
            
            <!-- Imágenes modernas -->
            <remove fileExtension=".svg" />
            <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
            <remove fileExtension=".webp" />
            <mimeMap fileExtension=".webp" mimeType="image/webp" />
            <remove fileExtension=".ico" />
            <mimeMap fileExtension=".ico" mimeType="image/x-icon" />
            
            <!-- JavaScript moderno -->
            <remove fileExtension=".js" />
            <mimeMap fileExtension=".js" mimeType="application/javascript" />
            <remove fileExtension=".mjs" />
            <mimeMap fileExtension=".mjs" mimeType="application/javascript" />
            
            <!-- CSS -->
            <remove fileExtension=".css" />
            <mimeMap fileExtension=".css" mimeType="text/css" />
            
            <!-- Source Maps (desarrollo) -->
            <remove fileExtension=".map" />
            <mimeMap fileExtension=".map" mimeType="application/json" />
        </staticContent>

        <!-- Configuración de compresión -->
        <urlCompression doStaticCompression="true" doDynamicCompression="true" />

        <!-- Configuración de tiempo de ejecución -->
        <asp>
            <limits scriptTimeout="00:10:00" />
        </asp>

        <!-- Deshabilitar el listado de directorios -->
        <directoryBrowse enabled="false" />

        <!-- Configuración de errores personalizados (opcional) -->
        <httpErrors errorMode="Detailed" existingResponse="PassThrough" />

        <!-- Caché específico para Service Worker (NO cachear en servidor) -->
        <caching>
            <profiles>
                <!-- Service Worker siempre fresco -->
                <add extension=".js" policy="DisableCache" kernelCachePolicy="DisableCache" 
                     location="None" varyByQueryString="*" />
            </profiles>
        </caching>
    </system.webServer>

    <!-- Configuración de PHP -->
    <system.web>
        <compilation debug="false" />
    </system.web>

    <!-- Configuración específica para archivos PWA -->
    <location path="sw.js">
        <system.webServer>
            <staticContent>
                <clientCache cacheControlMode="DisableCache" />
            </staticContent>
            <httpProtocol>
                <customHeaders>
                    <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
                    <add name="Service-Worker-Allowed" value="/" />
                </customHeaders>
            </httpProtocol>
        </system.webServer>
    </location>

    <location path="manifest.json">
        <system.webServer>
            <staticContent>
                <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="1.00:00:00" />
            </staticContent>
        </system.webServer>
    </location>
</configuration>
