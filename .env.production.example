# ==================================================
# CONFIGURACIÓN DE PRODUCCIÓN - IIS
# ==================================================
# Este archivo contiene las variables de entorno necesarias para producción
# Copiar este archivo a .env en el servidor y configurar los valores apropiados

# --------------------------------------------------
# APLICACIÓN
# --------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

APP_NAME="Safetyobservation"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://tudominio.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# --------------------------------------------------
# LOGGING
# --------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# --------------------------------------------------
# DEBUGBAR - DESHABILITADO EN PRODUCCIÓN
# --------------------------------------------------
DEBUGBAR_ENABLED=false

# --------------------------------------------------
# BASE DE DATOS
# --------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=db_safetyobservation_prod
DB_USERNAME=usuario_produccion
DB_PASSWORD=contraseña_segura_aqui

# --------------------------------------------------
# SESIONES
# --------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=480
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# --------------------------------------------------
# BROADCAST, FILESYSTEM Y QUEUE
# --------------------------------------------------
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# --------------------------------------------------
# CACHÉ
# --------------------------------------------------
CACHE_STORE=database
CACHE_PREFIX=safety_obs_

# --------------------------------------------------
# REDIS (Opcional - descomentar si se usa)
# --------------------------------------------------
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# --------------------------------------------------
# CORREO ELECTRÓNICO
# --------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=observacionwasion@gmail.com
MAIL_PASSWORD="npvf neyd layn cifq"
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="observacionwasion@gmail.com"
MAIL_FROM_NAME="Wasion Safety Observation"

# --------------------------------------------------
# AWS (Si se utiliza S3 para archivos)
# --------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# --------------------------------------------------
# CONFIGURACIÓN ESPECÍFICA DE IIS
# --------------------------------------------------
# Asegurar que IIS pueda escribir en estos directorios:
# - storage/framework/sessions
# - storage/framework/views
# - storage/framework/cache
# - storage/logs
# - bootstrap/cache
# - public/storage (si se usa storage link)
