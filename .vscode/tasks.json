{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Inicar Backend",
            "command": "php",
            "args": ["artisan", "serve", "--host=0.0.0.0", "--port=8000"],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "shell",
            "label": "Inicar Frontend",
            "command": "npm",
            "args": ["run", "dev"],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
